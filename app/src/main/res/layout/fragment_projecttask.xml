        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            app:hintTextAppearance="@style/MyHintText">

            <EditText
                android:id="@+id/estimated_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estimated Hours"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:nextFocusDown="@id/first_name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/mediumTextSize"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/Urgency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="14dp"
            android:text="Urgency"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/calendarDateTextSize" />

        <Spinner
            android:id="@+id/urgency_spinner"
            style="@style/spinnerUnderline"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />


        <TextView
