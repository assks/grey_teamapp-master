        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="14dp"
            android:text="Priorty"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/calendarDateTextSize" />
        <Spinner
            android:id="@+id/priority_spinner"
            style="@style/spinnerUnderline"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            app:hintTextAppearance="@style/MyHintText">

            <EditText
                android:id="@+id/assigned_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="@string/assigned_date"
                android:imeOptions="actionDone"
                android:inputType="date"
                android:maxLines="1"
                android:nextFocusDown="@id/first_name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/mediumTextSize"
                android:theme="@style/MyEditText"
                tools:ignore="Autofill" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            app:hintTextAppearance="@style/MyHintText">

            <EditText
                android:id="@+id/dead_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="@string/dead_line"
                android:imeOptions="actionDone"
                android:inputType="date"
                android:maxLines="1"
                android:nextFocusDown="@id/first_name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/mediumTextSize"
                android:theme="@style/MyEditText"
                tools:ignore="Autofill" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            app:hintTextAppearance="@style/MyHintText">

            <EditText
                android:id="@+id/Notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notice"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:nextFocusDown="@id/first_name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/mediumTextSize"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            app:hintTextAppearance="@style/MyHintText">

            <EditText
                android:id="@+id/task_deliverables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/task_deliverables"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:nextFocusDown="@id/first_name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/mediumTextSize"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/status1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="14dp"
            android:text="Status"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/calendarDateTextSize" />

        <Spinner
            android:id="@+id/status_spinner"
            style="@style/spinnerUnderline"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />


        <Button
            android:id="@+id/submit_task"
            android:text="@string/submit"
            android:textColor="@color/colorIconText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/button_bg" />

