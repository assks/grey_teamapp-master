<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.UserProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/ic_section_background"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/user_name"
            android:src="@drawable/circluler_bg" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_icon"
            android:layout_marginTop="8dp"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/headingTextSize" />

        <TextView
            android:id="@+id/employee_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:textAlignment="center" />

        <View
            android:id="@+id/user_icon_view"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            android:layout_below="@id/employee_designation"
            android:background="#f4f4f4" />


        <TextView
            android:id="@+id/personal_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_icon_view"
            android:fontFamily="@string/fontFamilyLight"
            android:padding="10dp"
            android:textSize="@dimen/headingTextSize"
            android:text="@string/personal_detail"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary" />

        <View
            android:id="@+id/horizontalDivider"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_below="@id/personal_detail"
            android:layout_centerHorizontal="true" />


        <LinearLayout
            android:id="@+id/gender_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_detail"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/horizontalDivider"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textColor="@color/colorSecondaryText" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bottom_line"
                android:paddingBottom="4dp"
                android:textColor="@color/colorPrimaryText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_detail"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/horizontalDivider"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/marital_status"
                android:textColor="@color/colorSecondaryText" />

            <TextView
                android:id="@+id/marital_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bottom_line"
                android:paddingBottom="4dp"
                android:textColor="@color/colorPrimaryText" />

        </LinearLayout>

        <View
            android:id="@+id/horizontalDivider2"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_below="@id/gender_layout"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender_layout"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/horizontalDivider2"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nationality"
                android:textColor="@color/colorSecondaryText" />

            <TextView
                android:id="@+id/nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bottom_line"
                android:paddingBottom="4dp"
                android:textColor="@color/colorPrimaryText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dob_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender_layout"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/horizontalDivider2"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dob"
                android:textColor="@color/colorSecondaryText" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bottom_line"
                android:paddingBottom="4dp"
                android:textColor="@color/colorPrimaryText" />

        </LinearLayout>


        <TextView
            android:id="@+id/father_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dob_layout"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:text="@string/father"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/father"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/father_text"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_line"
            android:paddingBottom="4dp"
            android:textColor="@color/colorPrimaryText" />


        <TextView
            android:id="@+id/religion_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/father"
            android:layout_marginTop="8dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/reporting_to"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/religion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reporting_to_text"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_line"
            android:paddingBottom="4dp"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/reporting_to_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/father"
            android:layout_marginTop="8dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/reporting_to"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/reporting_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reporting_to_text"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_line"
            android:paddingBottom="4dp"
            android:textColor="@color/colorPrimaryText" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reporting_to"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/horizontalDivider2"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/joining_date"
                android:textColor="@color/colorSecondaryText" />

            <TextView
                android:id="@+id/joining_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bottom_line"
                android:paddingBottom="4dp"
                android:textColor="@color/colorPrimaryText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/appointment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reporting_to"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/horizontalDivider2"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/appointment_date"
                android:textColor="@color/colorSecondaryText" />

            <TextView
                android:id="@+id/appointment_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bottom_line"
                android:paddingBottom="4dp"
                android:textColor="@color/colorPrimaryText" />

        </LinearLayout>

        <View
            android:id="@+id/contact_view"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/appointment_layout"
            android:layout_marginTop="8dp"
            android:background="#f4f4f4"
            android:visibility="visible" />


        <TextView
            android:id="@+id/content_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_view"
            android:padding="10dp"
            android:textSize="@dimen/headingTextSize"
            android:text="@string/contact_detail_address"
            android:textColor="@color/colorPrimary" />


        <TextView
            android:id="@+id/permanent_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_detail"
            android:layout_marginTop="8dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/permanent_address"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/permanent_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/permanent_address_text"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_line"
            android:paddingBottom="4dp"
            android:textColor="@color/colorPrimaryText" />


        <TextView
            android:id="@+id/current_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/permanent_address"
            android:layout_marginTop="8dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/current_address"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/current_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_address_text"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_line"
            android:paddingBottom="4dp"
            android:textColor="@color/colorPrimaryText" />


        <TextView
            android:id="@+id/official_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_address"
            android:layout_marginTop="8dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/official_email"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/official_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/official_email_text"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_line"
            android:paddingBottom="4dp"
            android:textColor="@color/colorPrimaryText" />


        <TextView
            android:id="@+id/personal_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/official_email"
            android:layout_marginTop="8dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/personal_email"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/personal_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/personal_email_text"
            android:background="@drawable/bottom_line"
            android:paddingBottom="4dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/colorPrimaryText" />


        <TextView
            android:id="@+id/number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_email"
            android:layout_marginTop="8dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/mobile_number"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/number_text"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_line"
            android:paddingBottom="4dp"
            android:textColor="@color/colorPrimaryText" />


        <TextView
            android:id="@+id/emergency_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/number"
            android:layout_marginTop="8dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/emergency_number"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/emergency_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emergency_number_text"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_line"
            android:paddingBottom="4dp"
            android:textColor="@color/colorPrimaryText" />


        <View
            android:id="@+id/confidential_view"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/emergency_number"
            android:layout_marginTop="8dp"
            android:background="#f4f4f4"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/conf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/confidential_view">

            <include layout="@layout/layout_confidential_layout" />

        </LinearLayout>

        <View
            android:id="@+id/eduation_view"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/conf"
            android:layout_marginTop="8dp"
            android:background="#f4f4f4"
            android:visibility="visible" />


        <TextView
            android:id="@+id/eduational_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eduation_view"
            android:padding="10dp"
            android:textSize="@dimen/headingTextSize"
            android:text="@string/eduational_detail"
            android:textColor="@color/colorPrimary" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eduational_detail"
            android:visibility="visible" />


        <View
            android:id="@+id/attachment_divider"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            android:layout_below="@id/profile_recycler_view"
            android:background="#f4f4f4" />


        <TextView
            android:id="@+id/attachment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/attachment_divider"
            android:text="@string/attachment_list"
            android:padding="10dp"
            android:textSize="@dimen/headingTextSize"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/attachment_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/click_here"
            android:layout_below="@id/attachment_text"
            android:textAlignment="textStart"
            android:textAllCaps="false" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>