            <LinearLayout
                android:id="@+id/state1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/calendarDateTextSize" />

                <Spinner
                    android:id="@+id/state"
                    style="@style/spinnerUnderline"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lodging1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lodging"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/calendarDateTextSize" />

                <Spinner
                    android:id="@+id/hotel"
                    style="@style/spinnerUnderline"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>


            <Button
                android:id="@+id/fetch_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/fetch_address"
                android:textAllCaps="false"
                android:textColor="@color/colorIconText" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/latlong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/getlocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"
                    android:gravity="center_horizontal" />

            </LinearLayout>


            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/submi"
                android:textAllCaps="false"
                android:textColor="@color/colorIconText" />

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/pick_coordina"
                android:textAllCaps="false"
                android:textColor="@color/colorIconText" />

        </LinearLayout>

        </FrameLayout>
    </RelativeLayout>
</ScrollView>