<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorDivider</item>
        <item name="colorControlHighlight">@color/colorDivider</item>
        <item name="colorControlActivated">@color/ic_launcher_background</item>
        <item name="android:actionMenuTextColor">@color/colorIconText</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@mipmap/gra1</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/colorDivider</item>
        <item name="colorControlHighlight">@color/colorDivider</item>
        <item name="colorControlActivated">@color/ic_launcher_background</item>
        <item name="android:actionMenuTextColor">@color/colorIconText</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/gra1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/ic_launcher_background</item>
    </style>

    <style name="spinnerUnderline" parent="@style/Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">40dp</item>
    </style>

    <style name="MyHintText" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/calendarDateTextSize</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#B4B400</item>
        <item name="colorControlNormal">#F11B1B</item>
    </style>
    <!--Input field style-->
    <style name="MyEditText" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColorHint">@color/colorSelectedTecStatus</item>
        <item name="colorControlNormal">@color/colorSelectedTecStatus</item>
        <item name="colorControlHighlight">@color/colorSelectedTecStatus</item>
        <item name="colorControlActivated">@color/colorSelectedTecStatus</item>
    </style>

</resources>
